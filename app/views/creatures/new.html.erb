<% if @creature.errors.any? %>
  <div class="col-12">
  <% @creature.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </div>
<% end %>

<div class="col-9 offset-1 mt-4">
  <h1>Add A New Creature</h1>
  <%= form_for @creature do |f| %>
    <div class="form-group mt-4">
      <%= f.label :avatar, class: "form-control-lg mb-1" %><br />
      <%= f.file_field :avatar %>
    </div>
    <div class="form-group">
      <%= f.label :name, class: "form-control-lg mb-1" %><br />
      <%= f.text_field :name, class: "form-control mb-2", required: "true" %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "block form-control-lg mb-1" %>
      <%= f.text_area :description, class: "form-control", required: "true" %>
    </div>
      <%= f.submit "Save Creature", class: "btn btn-info float-right" %>
      <%= link_to "Cancel", creatures_path, class: "btn btn-secondary float-right mr-2" %>
  <% end %>
</div>
